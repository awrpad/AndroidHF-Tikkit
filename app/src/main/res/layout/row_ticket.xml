<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0CA"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/clParent"
        app:layout_constraintBottom_toBottomOf="@id/clParent"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="200dp"
        android:layout_height="88dp"
        android:textAlignment="viewStart"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintRight_toLeftOf="@id/btnSee"
        android:textColor="#000"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btnSee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="See"
        android:textColor="#FFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/clParent"
        app:layout_constraintRight_toRightOf="@id/clParent"
        app:layout_constraintTop_toTopOf="@id/clParent" />


</android.support.constraint.ConstraintLayout>