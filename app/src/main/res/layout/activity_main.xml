<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/clMainParent"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/clMainParent"
        app:layout_constraintBottom_toTopOf="@id/btnSeeTickets"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSeeTickets"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="@id/clMainParent"
        android:textSize="24dp"
        android:text="See stored tickets"/>

</android.support.constraint.ConstraintLayout>